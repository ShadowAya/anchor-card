{
  "compilerOptions": {
    "typeRoots": ["./globalTypes"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
  }
}
